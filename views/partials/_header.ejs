<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">inquizitive</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- NAV OPTIONS FOR PAGES -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link" href="#">Features</a>
        <a class="nav-item nav-link" href="#">Pricing</a>
      </div>
      <% if (!user) {%>
      <div class="nav-utility-buttons">
        <ul class="nav justify-content-end">
          <li class="nav-item list-group-item-primary">
            <a class="nav-link" id="login-button" href="#">LOGIN</a> <!-- FOR SPA-->
          </li>
          <li class="nav-item list-group-item-primary">
            <a class="nav-link" id="register-button" href="#">REGISTER</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="search-icon" href="#"><span class="material-icons">search</span></a>
          </li>
        </ul>
      </div>
      <%} else { %>
      <div class="nav-utility-buttons">
        <ul class="nav justify-content-end">
          <li class="nav-item">
            <a class="nav-link" id="search-icon" href="#"><span class="material-icons">search</span></a>
          </li>

          <li class="nav-item">
            <form class="form-inline" id="logout-form">
              <div class="input-group mr-sm-20">
                <div class="input-group-prepend">
                  <div class="input-group-text">Logged In As: <%= user.name%></div>
                </div>
                <button type="submit" class="btn btn-danger">Logout</button>
              </div>
            </form>
          </li>
        </ul>
      </div>
      <% } %>
      <!-- NAV OPTIONS FOR LOGIN/REGISTER/SEARCH -->
    </div>
  </nav>
  <div class="partials-container">
    <%- include('_login') %>
    <%- include('_register') %>
    <%- include('_search') %>
  </div>
</header>